<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#051431"
    android:paddingTop="50dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/head_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/app" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@string/app_login"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/pic_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="账户：" />

        <EditText
            android:id="@+id/ed_account"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/pic_account"
            android:background="@null"
            android:enabled="true"
            android:hint="请输入手机号"
            android:textColorHint="#807d78"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>
    <!--18760372556-->

    <ImageView
        android:layout_width="220dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="#ECECEC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/pic_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="密码：" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/pic_password"
            android:background="@null"
            android:enabled="true"
            android:hint="请输入密码"
            android:textColorHint="#807d78"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:digits="@string/intput_psw"
            android:textSize="13sp" />

    </RelativeLayout>
    <ImageView
        android:layout_width="220dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="#ECECEC" />


    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp" >

        <TextView
            android:id="@+id/tv_forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="25dp"
            android:text="忘记密码?"
            android:textColor="#9C9EA3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_resiger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:text="注册"
            android:textColor="#9C9EA3"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_login"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>




</LinearLayout>
